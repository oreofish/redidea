<div class="block" id="block-text">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <% @scopes.each do |s| %>
        <li <%= "class='active first'" if s.to_s == @scope %> ><%= link_to t(s), "#{ideas_path}?scope=#{s}" %></li>
      <% end %>
    </ul>
  </div>

  <% if @scope == 'rule' or @scope == 'upload' %>
    <%= render @scope %>
  <% else %>
    <%= render 'idea_box' %>
  <% end %>

  <% content_for :sidebar, render(:partial => 'sidebar') -%>

  <br />

</div>
