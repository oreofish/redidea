<div class="block" id="block-text">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <% if @scope == :mine %>
        <li><%= link_to 'ideas', ideas_path %></li>
        <li class="active first"><%= link_to 'mine', "#{ideas_path}?scope=mine" %></li>
      <% else %>
        <li class="active first"><%= link_to 'ideas', ideas_path %></li>
        <li><%= link_to 'mine', "#{ideas_path}?scope=mine" %></li>
      <% end %>
    </ul>
  </div>

  <div class="content">
  <% if @scope == :mine %>
    <h1>My ideas</h1>
    <%= render 'form' %>
  <% else %> 
    <h1>Listing ideas</h1>
  <% end %>
  </div>

  <% @ideas.each do |idea| %>
  <div class="content">
    <div class="inner">
      <p class="first">
        <%= idea.user_id %> | 
        <%= idea.title %>
      </p>
      <hr />
      <p>
        <%= idea.content %>
      </p>
      <hr />

      <div class="right">
      <% if @scope == :mine %>
        <%= link_to 'Destroy', idea, :confirm => 'Are you sure?', :method => :delete %>
      <% else %> 
        <%= link_to 'tread', likes_path, :method => :post %>
        <%= link_to 'like', likes_path, :method => :post %>
        <%= link_to 'surprise', likes_path, :method => :post %>
        <%= link_to 'soy', likes_path(:idea_id => idea.id, :score => -1), :method => :get %>
      <% end %>
      </div>
    </div>
  </div>
  <% end %>

  <% content_for :sidebar, render(:partial => 'sidebar') -%>

  <br />

</div>
