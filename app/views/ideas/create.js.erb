<% if @idea.valid? %>
    $('#myideas').prepend( "<%= j render( :partial => 'my_ideas', :locals => { :idea => @idea }) %>" );
  $('#myideas > li:first').effect('highlight', {}, 3000);
  $('#new_idea')[0].reset();
  flashController.doSuccess('<p>创建成功</p>');
<% else %>
    flashController.doFailure('<p>创建失败</p>');
<% end %>

