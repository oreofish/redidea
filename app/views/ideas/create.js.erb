<% if @idea.valid? %>
    $('#myideas').prepend( "<%= j render( :partial => 'my_ideas', :locals => { :idea => @idea }) %>" );
  $('#myideas > li:first').effect('highlight', {}, 3000);
  $('#new_idea')[0].reset();
    $('.flash').html('<div class="message notice create"> <p>创建成功</p>  </div>');
  $('.flash .notice').effect('fade', {}, 3000);
<% else %>
    $('.flash').html('<div class="message notice create"> <p>创建失败</p>  </div>');
  $('.flash .notice').effect('fade', {}, 3000);
<% end %>

