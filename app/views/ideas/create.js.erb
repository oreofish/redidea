<% if @idea.valid? %>
    $('#myideas').prepend( "<%= j render( :partial => 'my_ideas', :locals => { :idea => @idea }) %>" );
  $('#myideas > li:first').effect('highlight', {}, 3000);
  $('#new_idea')[0].reset();
  flashController.doSuccess('<div class="message notice create"> <p>创建成功</p>  </div>');
<% else %>
    flashController.doFailure('<div class="message notice create"> <p>创建失败</p>  </div>');
<% end %>

