<%# encoding: utf-8 %>
<h2>忘记密码了？</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label "填写您的邮箱：" %>
    <%= f.email_field :email %>
    <%= f.submit "发送重置的密码" %>
  </div>
<% end %>
<br />
<%= render :partial => "devise/shared/links" %>