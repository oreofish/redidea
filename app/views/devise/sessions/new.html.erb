<div class='block' id='block-login'>
  <h2>Sign in</h2>
  <div class='content login'>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login" }) do |f| %>
    <div class='group wat-cf'>
      <div class='left'><%= f.label :email %></div>
      <div class='right'><%= f.email_field :email %></div>
    </div>

    <div class='group wat-cf'>
      <div class='left'><%= f.label :password %></div>
      <div class='right'><%= f.password_field :password %></div>
    </div>
    
    <% if devise_mapping.rememberable? -%>
    <div class='group wat-cf'>
      <div class='right'><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    </div>
    <% end -%>

    <div class='group wat-cf'>
      <div class='right'><%= f.submit "Login" %></div>      
    </div>
    <% end %>

    <div class='group wat-cf'>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>