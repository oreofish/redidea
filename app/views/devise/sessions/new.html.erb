<%# encoding: utf-8 %>
<div class='block' id='block-login'>
  <h2>登录</h2>
  <div class='content login'>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login" }) do |f| %>
    <div class='group wat-cf'>
      <div class='left'><%= f.label :email %></div>
      <div class='right'><%= f.email_field :email, :size => 25 %></div>
    </div>

    <div class='group wat-cf'>
      <div class='left'><%= f.label :password %></div>
      <div class='right'><%= f.password_field :password, :size => 25 %></div>
    </div>
    
    <% if devise_mapping.rememberable? -%>
    <div class='group wat-cf'>
      <div class='right'><%= f.check_box :remember_me %> <%= f.label t(:remember_me) %></div>
    </div>
    <% end -%>

    <div class='group wat-cf'>
      <div class='right'>
        <button class='button' type='submit'>
          <%= image_tag "web-app-theme/icons/key.png"%>登录
        </button>
      </div>
    </div>
    <% end %>

    <div class='group wat-cf'>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>