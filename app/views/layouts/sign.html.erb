<%# encoding: utf-8 %>
<!DOCTYPE html>
<html>
<head>
  <title>Red iDea</title>
  <% if mobile_device? %>
    <%= stylesheet_link_tag 'application-mobile' %>
  <% else %>
    <%= stylesheet_link_tag 'application-desktop' %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/images/idea.ico">
  <link rel="Bookmark" href="/images/idea.ico">
</head>
<body>
  <div id="container">
    <%= render 'layouts/header' %>

    <div id="box">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>

      <%= yield %>
    </div>
  </div>
</body>
</html>
