<%# encoding: utf-8 %>
<!DOCTYPE html>
<html>
<head>
  <title>Red iDea</title>
  <%= stylesheet_link_tag 'web_app_theme' %>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body onload='bindIdeaHandler();'>
  <div id="container">
    <div id="header">
      <h1><a href="/">Red iDea</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
        <% if user_signed_in? %>
          <li>您好,<%= current_user.email %></li>
          <li><%= link_to "修改密码", edit_user_registration_path, :method => :get %></li>
          <li><%= link_to "退出", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <!--<li><%= link_to "注册", new_user_registration_path %></li>-->
          <li><%= link_to "登陆", new_user_session_path %></li>
        <% end %>
        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf">
        </ul>
      </div>
    </div>

<!--    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>

      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> Red iDea.</p>
          </div>
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>
  </div>
<%= debug(params) if Rails.env.development? %>
</body>
</html>
