<%# encoding: utf-8 %>
<!DOCTYPE html>
<html>
<head>
  <title>Red iDea</title>
  <% if mobile_device? %>
    <%= stylesheet_link_tag 'application-mobile' %>
  <% else %>
    <%= stylesheet_link_tag 'application-desktop' %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "http://" + local_ip + ":9292/faye.js" %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/images/idea.ico">
  <link rel="Bookmark" href="/images/idea.ico">
</head>
<body> 
  <div id="container">
    <%= render 'layouts/header' %>
    <div id="wrapper" class="wat-cf">

      <%= yield %>
    </div>

    <div id="footer">
      <div class="block">
        <p>Copyright &copy; <%= Time.now.year %> Red iDea.</p>
      </div>
    </div>

  </div>

<div class="message_box" >
  <div class="message_list">
    <dl id="chat">
      <%= render @messages %>
    </dl>
  </div>
  <div class="input">
    <%= render 'messages/form' %>
  </div>
</div>

<div id="friend">
<button class='message_button' type='submit'>
  <%= image_tag "web-app-theme/icons/tick.png"%>聊天
</button>
</div>

<%= debug(params) if Rails.env.development? %>
</body>
</html>
