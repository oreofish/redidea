(function() {
  var $item = $('#myideas li.ideaid<%= @idea.id %> .item');
  var $link = $item.find('a.comment_link');
  $link.text( $link.text().replace(/\d+/, <%= @comments.length %>) );

  var $box =  $item.find('div.comments');
  $box.html( "<%= j render 'comment_box' %>" );
  $box.find('#comment_comment').focus();
}());
